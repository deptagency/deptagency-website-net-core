@using D.Website.Controllers;
<div class="our-work" data-section="join-us">
    <div class="container">
        <div class="grid-12">
            <div class="col-12">
                <h2>Join us</h2>
                <div class="slider__controls slider__controls--jobs">
                    <span class="slider__controls__button slider__controls__button--is-hidden js-prev" data-slider-controls="slider--jobs">
                        <svg class="svg-icons-arrow-left" width="28" height="9" viewBox="0 0 28 9" xmlns="http://www.w3.org/2000/svg">
                            <path d="M28 6.01H5v3.004L0 4.507 5 0v3.005h23z" fill="#000" fill-rule="evenodd" />
                        </svg>
                    </span>
                    <span class="slider__controls__button js-next" data-slider-controls="slider--jobs">
                        <span class="slider__controls__more">More</span>
                        <svg class="svg-icons-arrow-right" width="28" height="9" viewBox="0 0 28 9" xmlns="http://www.w3.org/2000/svg">
                            <path d="M0 3.004h23V0l5 4.507-5 4.507V6.009H0z" fill="#000" fill-rule="evenodd" />
                        </svg>
                    </span>
                </div>
            </div>
        </div>
        <div class="slider slider--jobs js-slider" data-slider="slider--jobs">
        <div class="jobs__slide"><img src="/images/jobs/jobs-7.jpg"></div>
        <div class="jobs__slide"><img src="/images/jobs/jobs-6.jpg"></div>
        <div class="jobs__slide"><img src="/images/jobs/jobs-5.jpg"></div>
        <div class="jobs__slide"><img src="/images/jobs/jobs-4.jpg"></div>
        <div class="jobs__slide"><img src="/images/jobs/jobs-3.jpg"></div>
        <div class="jobs__slide"><img src="/images/jobs/jobs-1.jpg"></div>
        <div class="jobs__slide"><img src="/images/jobs/jobs-2.jpg"></div>
        <div class="jobs__slide job__content">
            <h3 class="jobs__title">Work hard play hard.</h3>
            <p class="jobs__description">You spend almost half of your waking life at work. That’s a really depressing fact, unless you work in the best, funnest and most rewarding environment. So that’s what we’re all about. And it’s not just about parties and free sodas (though, yes and yes) - it’s about giving you the space to do what you’re good at, and allowing you to learn the things you want to be better at.</p>
            <p class="jobs__description jobs__description--cta js-next" data-slider-controls="slider--jobs">
                View all vacancies
                <svg class="svg-icons-arrow-right" width="28" height="9" viewBox="0 0 28 9" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0 3.004h23V0l5 4.507-5 4.507V6.009H0z" fill="#000" fill-rule="evenodd" />
                </svg>
            </p>
        </div>

    @await Component.InvokeAsync("JobsListing")

        </div>
    </div>
</div>